@page
@model HolaWeb.App.Fontend.Pages.ListModel
@{
}
<h1>Listado de saludos en varios Idiomas</h1>
<form method="get">
    <div class="from-group">
        <p>
            Saludo: <input type="text" name="filtrobusqueda" asp-for="FiltroBusqueda"/>
            <input type="submit" value="Filtrar" />
        </p>
    </div>
</form>
<table class="table">
    @foreach (var saludo in Model.Saludos)
    {
        <tr>
            <td>@saludo.EnEspanol</td>
            <td>@saludo.EnIngles</td>
            <td>@saludo.EnItaliano</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-saludoId="@saludo.Id">
                <i class="fas fa-info-circle"> </i>
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-saludoId="@saludo.Id">
                <i class="fas fa-address-book fa-lg" aria-hidden="true"> </i>
                </a>
            </td>
        </tr>


    }

</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar Saludo</a>