@page
@model HolaWeb.App.Fontend.Pages.EditModel
@{
}
<h2>Edición del Saludo: @Model.Saludo.EnEspanol</h2>
<form method="post">
    <input type="hidden" asp-for="Saludo.Id"/>
    <div class="form-group">
        <label asp-for="Saludo.EnEspanol"></label>
        <input asp-for="Saludo.EnEspanol" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnEspanol"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saludo.EnIngles"></label>
        <input asp-for="Saludo.EnIngles" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnIngles"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saludo.EnItaliano"></label>
        <input asp-for="Saludo.EnItaliano" class="form-control">
        <span class="text-danger" asp-validation-for="Saludo.EnItaliano"></span>
    </div>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a href="./List" class="btn-default">Lista Saludos</a>